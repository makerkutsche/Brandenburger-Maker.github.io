<div class="lab-teaser-wrap col-xs-22 col-xs-push-1 col-md-20 col-md-push-2 col-lg-18 col-lg-push-3">
    {% if include.event == '1' %}
        {% for lab in site.labs %}
            {% if lab.visible == '1' %}
                {% include partials/event-lab-teaser.liquid name=lab.title adr=lab.adr txt=lab.eventtxt url=lab.url src=lab.src copy=lab.headline %}
            {% endif %}
        {% endfor %}
    {% elsif include.corona == '1' %}
        {% for lab in site.labs %}
            {% if lab.corona == '1' %}
                {% include partials/event-lab-teaser.liquid name=lab.title adr=lab.adr txt=lab.eventtxt url=lab.url src=lab.src copy=lab.headline %}
            {% endif %}
        {% endfor %}

    {% else %}
        {% for lab in site.labs %}
                {% include partials/lab-teaser.liquid name=lab.title url=lab.url src=lab.src copy=lab.headline %}
        {% endfor %}
    {% endif %}

</div>
